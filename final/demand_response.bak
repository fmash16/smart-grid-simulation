function [quantity_A, quantity_B, quantity_C] = demand_response(current_clearing_price, demand_A, demand_B, demand_C)

%t = linspace(0, 1);
%F = optimizef(t);
%plot(t,F,'LineWidth',2)
%hold on
%plot([x_min,x_min],[-2,8],'g--');
%plot([x_max,x_max],[-2,8],'g--');
%legend('bill(x)','discomfort(x)')
%xlabel({'x';'Tradeoff region between the green lines'})

current_clearing_price = 5;     % unit in taka
total_demand = (demand_A + demand_B + demand_C);
desired_demand = total_demand * 5/60;  % unit in kWh

x_min = 0.09;
x_max = 0.15;

k = 3;

opt_Function = @(x)[current_clearing_price*x; k*(x-desired_demand)^2];


goal = [current_clearing_price*x_min, 0];
weight = [1,0];
x0 = 0.6;
x = fgoalattain(opt_Function, x0, goal, weight, [], [], [], [], x_min, x_max)

quantity_A = (demand_A / total_demand) * x;
quantity_B = (demand_B / total_demand) * x;
quantity_C = (demand_C / total_demand) * x;

%plot([x,x], [-2,8], 'r-')
% x = particleswarm(opt_Function, 2)
%x = fmincon(opt_Function, x0, [], [], [], [], x_min, x_max)
